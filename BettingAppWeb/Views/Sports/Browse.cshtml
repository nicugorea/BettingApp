@model List<BettingAppWeb.Models.SportViewModel>

@{
    ViewBag.Title = "Browse";
}


<h2>Browse</h2>

<div class="center-block">
    <table class="table">
        <thead class="table">
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Description
                </th>

                <th>
                    Bets value
                </th>

                <th>
                    End Date
                </th>
            </tr>
        </thead>
        @{ foreach (var sport in Model)
            {
        <tr>
            <td>
                @sport.Name
            </td>

            <td>
                @sport.Description
            </td>

            <td>
                @sport.Value
            </td>

            <td>
                @sport.EndTime
            </td>


        </tr>

            }

        }
    </table>
</div>


